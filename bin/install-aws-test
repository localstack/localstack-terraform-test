#!/bin/bash

TEST_BIN=$HOME/.cache/localstack/aws.combined.test

# TEST_BIN_URL=${TEST_BIN_URL:-"https://localstack-terraform-test.s3.eu-central-1.amazonaws.com/aws.test"}
TEST_BIN_URL=${TEST_BIN_URL:-"https://localstack-terraform-test.s3.eu-central-1.amazonaws.com/allservices.test"}

[ -f ${TEST_BIN} ] && { echo "aws.combined.test already exists at ${TEST_BIN} skipping"; exit 0; }

BIN_DIR=$(dirname ${TEST_BIN})
mkdir -p ${BIN_DIR}

if [ "${DOWNLOAD_TEST_BIN}" == "1" ]; then
  echo "downloading test_binary from ${TEST_BIN_URL}"
  if ! curl -L ${TEST_BIN_URL} --output ${TEST_BIN}; then
    exit 1;
  fi
  chmod +x ${TEST_BIN}
  ls -la ${TEST_BIN}
  exit 0
fi

